{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://effect-agent/schemas/category.schema.json",
  "title": "Category",
  "description": "A code style category containing patterns to detect",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the category (e.g., 'imperative', 'pattern-matching')",
      "pattern": "^[a-z][a-z0-9-]*$"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the category",
      "minLength": 1
    },
    "patterns": {
      "type": "array",
      "description": "List of patterns to detect in this category",
      "items": {
        "$ref": "#/$defs/pattern"
      },
      "minItems": 1
    }
  },
  "required": ["id", "name", "patterns"],
  "additionalProperties": false,
  "$defs": {
    "pattern": {
      "type": "object",
      "description": "A single code pattern to detect",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the pattern within this category",
          "pattern": "^[a-z][a-z0-9-]*$"
        },
        "rule": {
          "type": "string",
          "description": "Description of the rule (e.g., 'for loops â†’ Array.map')",
          "minLength": 1
        },
        "example": {
          "$ref": "#/$defs/example"
        }
      },
      "required": ["id", "rule", "example"],
      "additionalProperties": false
    },
    "example": {
      "type": "object",
      "description": "A before/after code example",
      "properties": {
        "description": {
          "type": "string",
          "description": "Brief description of what this example demonstrates",
          "minLength": 1
        },
        "bad": {
          "type": "string",
          "description": "The anti-pattern code to detect",
          "minLength": 1
        },
        "good": {
          "type": "string",
          "description": "The preferred Effect-TS code",
          "minLength": 1
        }
      },
      "required": ["description", "bad", "good"],
      "additionalProperties": false
    }
  }
}
