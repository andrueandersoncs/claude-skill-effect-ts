{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://effect-ts-skill.local/category.schema.json",
  "title": "Effect-TS Rule Category",
  "description": "Schema for defining custom Effect-TS compliance rule categories",
  "type": "object",
  "required": ["id", "name", "description", "rules"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "description": "Unique identifier for the category (lowercase, hyphens allowed)",
      "examples": ["my-custom-rules", "team-conventions"]
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "description": "Human-readable name for the category",
      "examples": ["Custom Rules", "Team Conventions"]
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "description": "Description of the category's purpose and philosophy",
      "examples": ["Rules specific to our team's Effect-TS coding standards"]
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "description": "Array of rules in this category",
      "items": {
        "type": "object",
        "required": ["rule", "example"],
        "additionalProperties": false,
        "properties": {
          "rule": {
            "type": "string",
            "minLength": 10,
            "description": "The rule as a prohibition statement (e.g., 'Never use X; use Y instead')",
            "examples": ["Never use raw fetch; use HttpClient service instead"]
          },
          "example": {
            "type": "object",
            "required": ["description", "bad", "good"],
            "additionalProperties": false,
            "properties": {
              "description": {
                "type": "string",
                "minLength": 5,
                "description": "Brief description of what this example illustrates",
                "examples": ["Making an HTTP request"]
              },
              "bad": {
                "type": "string",
                "minLength": 10,
                "description": "Code example showing the pattern to AVOID",
                "examples": ["const data = await fetch('/api').then(r => r.json())"]
              },
              "good": {
                "type": "string",
                "minLength": 10,
                "description": "Code example showing the correct Effect-TS pattern",
                "examples": ["const data = yield* HttpClient.get('/api').pipe(HttpClientResponse.json)"]
              }
            }
          }
        }
      }
    }
  }
}
